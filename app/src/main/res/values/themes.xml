<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Transactia" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="Theme.Transactia" parent="Base.Theme.Transactia" />

    <style name="Datetheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:textColorPrimary">@color/extrawhite</item>
        <item name="android:background">@color/maincolor</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColorSecondary">@color/extrawhite</item>
        <item name="android:colorControlActivated">@color/lightgreen</item>
    </style>

    <style name="Floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_gradient_background</item>
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/maincolor</item>
        <item name="colorAccent">@color/lightgreen</item>
        <item name="android:buttonTint">@color/lightgreen</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/extrawhite</item>
    </style>
</resources>
