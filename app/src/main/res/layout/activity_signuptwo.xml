<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A969"
    android:backgroundTint="#33443C"
    android:visibility="visible"
    tools:context=".signuptwo">

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="408dp"
        android:layout_height="352dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/round"
        android:orientation="horizontal"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.345">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="88dp"
                android:text="Select Image"
                android:textColor="#33443C"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/imgpg"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="109dp"
                android:layout_marginBottom="108dp"
                android:background="@drawable/holderforimg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view4"
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:layout_marginTop="109dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="108dp"
                android:background="@drawable/holderforimg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="249dp"
                android:layout_height="277dp"
                android:layout_marginStart="168dp"
                android:layout_marginTop="34dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cameraicon" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="220dp"
                android:text="Gallery"
                android:textColor="#33443C"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="264dp"
                android:layout_marginTop="220dp"
                android:text="Camera"
                android:textColor="#33443C"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/remob"
                android:layout_width="131dp"
                android:layout_height="43dp"
                android:layout_marginStart="126dp"
                android:layout_marginTop="293dp"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Cancel"
                android:textColor="#d3d3d3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="191dp"
                android:layout_height="191dp"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="201dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/galleryicon" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hold"
        android:layout_width="333dp"
        android:layout_height="700dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/round"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/signbt"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="636dp"
            android:layout_marginEnd="90dp"
            android:backgroundTint="#33443C"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:text="Sign up"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailaddtx"
            android:layout_width="273dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:gravity="bottom|start"
            android:hint="Email Address"
            android:importantForAccessibility="no"
            android:inputType="textEmailAddress"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birthdatetx" />

        <EditText
            android:id="@+id/birthdatetx"
            android:layout_width="273dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="bottom|start"
            android:hint="Birthdate"
            android:importantForAccessibility="no"
            android:inputType='none'
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/biotx" />

        <EditText
            android:id="@+id/provincetx"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:hint="Province"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailaddtx" />

        <EditText
            android:id="@+id/loctx"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:hint="Location"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/provincetx" />

        <EditText
            android:id="@+id/nametx"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:gravity="bottom|start"
            android:hint="Name"
            android:importantForAccessibility="no"
            android:inputType="text"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/biotx"
            android:layout_width="274dp"
            android:layout_height="54dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/acctx"
            android:gravity="top|start"
            android:hint="Bio"
            android:importantForAccessibility="no"
            android:inputType="text|textMultiLine"
            android:padding="1dp"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contacttx" />

        <ImageView
            android:id="@+id/pfp"
            android:layout_width="286dp"
            android:layout_height="313dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emptyprofile" />

        <ImageView
            android:id="@+id/addIMG"
            android:layout_width="103dp"
            android:layout_height="84dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="176dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/addprofile" />

        <EditText
            android:id="@+id/contacttx"
            android:layout_width="273dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="313dp"
            android:background="@drawable/acctx"
            android:gravity="bottom|start"
            android:hint="Contact Info"
            android:importantForAccessibility="no"
            android:inputType="number"
            android:padding="1dp"
            android:maxLength="11"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#BDBDBD"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="24dp"
            android:text="User Detail Form"
            android:textColor="#33443C"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="117dp"
            android:layout_height="35dp"
            android:layout_marginEnd="28dp"
            android:background="@drawable/acctx"
            app:boxBackgroundColor="@android:color/transparent"
            app:boxStrokeColor="@android:color/transparent"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addIMG">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="Sex"
                android:inputType="none"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>