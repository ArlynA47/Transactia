<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A969"
    android:backgroundTint="#33443C">

    <ImageView
        android:id="@+id/tgwhite"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/transactiawhite" />

    <ImageView
        android:id="@+id/tggreen"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/transactiagreen" />

    <ImageView
        android:id="@+id/transac"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="104dp"
        app:srcCompat="@drawable/transactiatitle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contain"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginStart="45dp"

        android:layout_marginTop="250dp"
        android:background="@drawable/round"
        android:visibility="visible">


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"

            android:layout_height="51dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="172dp"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Username"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/usernametx"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:gravity="bottom|start"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:includeFontPadding="false"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textIsSelectable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"

            android:layout_height="51dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="164dp"
            android:layout_marginEnd="172dp"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Password"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passtx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/black"
            android:gravity="bottom|start"

            android:importantForAccessibility="no"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingStart="16dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="6dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/loginbt"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="269dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="125dp"
            android:backgroundTint="#33443C"
            android:padding="1dp"
            android:text="LOG IN"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="152dp"
            android:layout_height="35dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="84dp"
            android:text="WELCOME!"
            android:textColor="#33443C"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signupbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="340dp"
            android:clickable="true"
            android:text="Don't have an account?"
            android:textColor="#3F3F3F"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:clickable="true"
            android:text="Forgot Password?"
            android:textColor="#33443C"
            android:textColorLink="@android:color/holo_red_light"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passtx" />

        <ImageView
            android:id="@+id/eyereveal"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="156dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/eyeclose" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>