<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reportpop"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/extrawhite"
        android:background="@drawable/txrd"
        android:visibility="visible"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView71"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="11dp"
            android:text="Report Violation"
            android:textStyle="bold"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/violation"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/violation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="#F44336"
            android:text="Violation"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView71" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="@color/grey"
            android:text="Violation"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/violation" />

        <TextView
            android:id="@+id/reportbackbt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintStart_toStartOf="@id/guideline6"
            app:layout_constraintWidth_percent="0.30" />

        <TextView
            android:id="@+id/reportcfbt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/gradientbt"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="@color/extrawhite"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintEnd_toStartOf="@id/guideline7"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintWidth_percent="0.30" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="283dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="72dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="252dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
