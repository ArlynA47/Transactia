<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".withpop">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page"
        android:layout_width="416dp"
        android:layout_height="841dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/holder"
            android:layout_width="414dp"
            android:layout_height="109dp"
            android:layout_marginTop="740dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bottombox"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/homemain"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/addg" />

            <ImageView
                android:id="@+id/prof"
                android:layout_width="136dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/profile"
                tools:srcCompat="@drawable/profile" />

        </LinearLayout>

        <ImageView
            android:id="@+id/titlemain"
            android:layout_width="414dp"
            android:layout_height="259dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="632dp"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/greentransactiatext" />

        <TextView
            android:id="@+id/search"
            android:layout_width="308dp"
            android:layout_height="34dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/searchtx"

            android:drawablePadding="4dp"

            android:hint="Search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/pop"
            android:layout_width="307dp"
            android:layout_height="327dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="224dp"
            android:background="@drawable/round"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="GLAD YOU'RE HERE"
                android:textColor="@color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Welcome to"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="TRANSACTIA: Your Barter and Trading Network"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="A world of endless possibilities is just a trade away. Join a community where trading items,skills,and favors opens up new possibilities. Connect,trade, and discover something new today!"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/started"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#33443C"
                android:text="Get started"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>