<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A969"
    android:backgroundTint="#33443C"
    tools:context=".signup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contain"
        android:layout_width="320dp"
        android:layout_height="450dp"

        android:layout_marginStart="45dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/bt"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="384dp"
            android:backgroundTint="#33443C"
            android:clickable="true"
            android:padding="1dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passstx2"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/txrd"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="1dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <EditText
            android:id="@+id/cfptx"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/txrd"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:padding="1dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/cursor_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cfp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="85dp"

            android:layout_height="26dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="172dp"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Username"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.032"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/usertx"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/txrd"
            android:importantForAccessibility="no"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="1dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:textCursorDrawable="@drawable/cursor_black"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="81dp"

            android:layout_height="26dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="172dp"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Password"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usertx" />

        <TextView
            android:id="@+id/cfp"
            android:layout_width="152dp"

            android:layout_height="26dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="172dp"
            android:baselineAligned="false"
            android:fontFamily="sans-serif-condensed"
            android:text="Confirm Password"
            android:textAllCaps="false"
            android:textColor="#808080"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passstx2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:text="Authentication Form"
            android:textColor="#33443C"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="231dp"
            android:layout_height="49dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:button="@null"
            android:drawableLeft="@drawable/custom_checkbox"
            android:text="Show Password"
            android:textColor="#33443C"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cfptx" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>