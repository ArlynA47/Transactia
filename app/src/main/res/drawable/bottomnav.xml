<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Top stroke layer -->
    <item android:top="0dp" android:bottom="-1dp"> <!-- Restrict the stroke to just the top edge -->
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <size android:height="1dp"/> <!-- Set the height of the stroke -->
        </shape>
    </item>

</layer-list>
